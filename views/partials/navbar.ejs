<div class="navbar bg-base-100">
  <div class="flex-1">
    <a class="<%= (page == '/') ? 'active' : '' %> btn btn-ghost normal-case text-xl hover:bg-gray-200" href="/">Lego Collection</a>
  </div>

  <div class="dropdown">
    <label tabindex="0" class="btn btn-ghost sm:hidden" style="color: black; border: 1px solid black;">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: black;">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </label>
    <ul tabindex="0" class="menu menu-sm dropdown-content right-0 mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
      <!-- Mobile Menu Items -->
      <li><a class="<%= (page == '/about') ? 'active' : '' %>" href="/about">About</a></li>
      <!-- Additional menu items -->

      <!-- Mobile Session Check -->
      <% if (session && session.user) { %>
        <!-- User is logged in - Mobile View -->
        <li>
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <ul class="p-2 bg-base-100">
              <li><a class="<%= (page == '/lego/addSet') ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a></li>
              <li><a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a></li>
              <li><a href="/logout">Log Out</a></li>
            </ul>
          </details>
        </li>
      <% } else { %>
        <!-- User is not logged in - Mobile View -->
        <li>
          <details>
            <summary>Account</summary>
            <ul class="p-2 bg-base-100">
              <li><a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a></li>
              <li><a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a></li>
              <li><a class="<%= (page == '/lego/addSet') ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a></li>
            </ul>
          </details>
        </li>
      <% } %>
    </ul>
  </div>

  <div class="navbar-center hidden sm:flex">
    <ul class="menu menu-horizontal px-1">
      <!-- Desktop Menu Items -->
      <li><a class="<%= (page == '/sets') ? 'active' : '' %>" href="/lego/sets">View Collection</a></li>
      <li><a class="<%= (page == '/about') ? 'active' : '' %>" href="/about">About</a></li>

      <!-- Desktop Session Check -->
      <% if (session && session.user) { %>
        <!-- User is logged in - Desktop View -->
        <li>
          <details>
            <summary>Account: <%= session.user.userName %></summary>
            <ul class="p-2 bg-base-100 right-0">
              <li><a class="<%= (page == '/lego/addSet') ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a></li>
              <li><a class="<%= (page == '/userHistory') ? 'active' : '' %>" href="/userHistory">User History</a></li>
              <li><a href="/logout">Log Out</a></li>
            </ul>
          </details>
        </li>
      <% } else { %>
        <!-- User is not logged in - Desktop View -->
        <li>
          <details>
            <summary>Account</summary>
            <ul class="p-2 bg-base-100 right-0">
              <li><a class="<%= (page == '/login') ? 'active' : '' %>" href="/login">Login</a></li>
              <li><a class="<%= (page == '/register') ? 'active' : '' %>" href="/register">Register</a></li>
              <li><a class="<%= (page == '/lego/addSet') ? 'active' : '' %>" href="/lego/addSet">Add to Collection</a></li>
            </ul>
          </details>
        </li>
      <% } %>
    </ul>
  </div>
</div>
