<!DOCTYPE html>
<html lang="en" data-theme="pastel">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection - User History</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body tabindex="-1">
    <%- include('partials/navbar', {page: '/userHistory'}) %>
  <!-- Navbar here -->
  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
          <p class="py-6">User History: <%= session.user.email %></p>
        </div>
      </div>
    </div>
    <br />
    <table class="table table-zebra">
      <thead>
        <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
        </tr>
      </thead>
      <tbody>
        <% session.user.loginHistory.forEach(function(history) { %>
          <tr>
              <td><%= history.dateTime %></td>
              <td><%= history.userAgent %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
