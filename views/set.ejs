<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body tabindex="-1">
    <%- include('partials/navbar', {page: ''}) %>

    <br />

    <div class="container mx-auto p-4">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold"><%= set.name %></h1>

            <p class="py-6">
              Below, you will find detailed information about the set: <%=set.name %>
            </p>
          </div>
        </div>
      </div>

      <br />

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <img
            class="w-full rounded-lg"
            src="https://cdn.rebrickable.com/media/sets/<%= set.set_num %>.jpg"
            alt=" Set Image"
          />
        </div>
        <div class="prose">
          <p>
            <span class="font-bold">Set Name: </span> <%= set.name %> <br />
            <span class="font-bold">Year Released: </span> <%= set.year %>
            <br />
            <span class="font-bold">Theme: </span> <%= set.theme %> <br />
            <span class="font-bold">Number of Parts: </span> <%= set.num_parts %> <br />
            <br />

            <span id="quote"></span>
            <br /><br />
            <a
              class="btn btn-primary btn-sm"
              href="#"
              onclick="history.back(); return false;"
              >RETURN</a
            >
          </p>
        </div>
      </div>
    </div>
  </body>  
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      let element = document.getElementById("quote");
      try {
        let res = await fetch("https://quotable.io/random")
          .then((response) => response.json())
          .then((data) => {
            element.innerHTML = `
                <div>${data.content}</div>
                <span>-</span>
                <em>${data.author}</em>
            `;
          });
      } catch (error) {
        console.log(error.message);
      }
    });
  </script>
</html>